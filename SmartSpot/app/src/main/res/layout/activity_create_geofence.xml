<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Hotspot ID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:password="true"
        android:layout_above="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword"
        android:layout_alignEnd="@+id/confirmPassword" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:password="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/radius"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/coordinates" />
    <TextView
        android:id="@+id/coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configure Hotspot"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/confirmPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxDataLimit"
        android:hint="Max data limit (MB)"
        android:layout_above="@+id/radius"
        android:layout_alignStart="@+id/confirmPassword"
        android:layout_marginBottom="26dp"
        android:layout_alignEnd="@+id/confirmPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Radius: "
        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:layout_above="@+id/save"
        android:layout_alignStart="@+id/maxDataLimit"
        android:layout_marginBottom="38dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Hotspot"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
