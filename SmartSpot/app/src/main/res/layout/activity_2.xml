<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.agrawalamod.smartspot.Activity2">


                <TextView android:text="Checking if the device is in one of the registered Geofences" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:id="@+id/text1" />

                <TextView
                android:text="(Within 1000 Meters of IIIT-Delhi)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Geofence Check"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If the device is in Geofence, a new Activity will be launched."
                android:id="@+id/textView5"
                    android:layout_marginTop="41dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignStart="@+id/text1" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This might take time to retrive accurate location using GPS."
                android:id="@+id/textView10"
                    android:layout_marginTop="51dp"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device&apos;s Current Location: "
        android:id="@+id/textView11"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Working..."
        android:id="@+id/textView12"
        android:layout_marginBottom="124dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User will be able to add new Geofences here"
        android:id="@+id/textView14"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Anyway"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>